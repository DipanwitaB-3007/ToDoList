<%- include('header'); -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% newListItems.forEach(function(newItem) { %>
    <form action="/remove" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value=<%=newItem._id %> onchange="this.form.submit()">
            <p class="para"><%= newItem.name %></p>
    </form>
</div>
<% }) %>
<form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off">
    <button type="submit" name="listType" value=<%= listTitle %>>+</button>
</form>
</div>
<%- include('footer'); -%>